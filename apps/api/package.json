{
	"name": "api",
	"version": "0.0.0",
	"private": true,
	"scripts": {
		"start": "node dist/index.js",
		"dev": "tsup --watch --onSuccess \"node dist/index.js\"",
		"build": "tsup",
		"clean": "rm -rf dist",
		"typecheck": "tsc --noEmit",
		"lint": "biome lint --apply ./src",
		"test": "vitest run",
		"test:watch": "vitest run --watch",
		"check": "biome check --apply ./src",
		"format": "biome format --write ./src"
	},
	"dependencies": {
		"@repo/logger": "*",
		"body-parser": "^1.20.2",
		"cors": "^2.8.5",
		"express": "^4.18.3",
		"morgan": "^1.10.0",
		"socket.io": "^4.7.5"
	},
	"devDependencies": {
		"@repo/typescript-config": "*",
		"@repo/vitest-presets": "*",
		"@types/body-parser": "^1.19.5",
		"@types/cors": "^2.8.17",
		"@types/express": "^4.17.21",
		"@types/morgan": "^1.9.9",
		"@types/node": "^20.11.24",
		"@types/supertest": "^6.0.2",
		"supertest": "^6.3.4",
		"tsup": "^8.0.2",
		"typescript": "^5.3.3"
	}
}
